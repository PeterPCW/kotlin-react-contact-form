{
  "compilerOptions": {
    "outDir": "./public",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "exclude": [
    "./node_modules/**/*",
    "./coverage/**/*",
    "./public/**/*"
  ],
  "moduleResolution": "node",
  "types": ["node", "jest", "@testing-library/jest-dom", "@types/react-typing-animation"],
}